            <Button Grid.Row="2"
                    Grid.Column="2"
                    Content="X"
                    Height="20"
                    Width="20"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="0,0,40,30"
                    Command="{Binding FreeUpCanvas}"
                    CommandParameter="10" />

            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        Grid.Row="2"
                        Grid.Column="2"
                        Width="150">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <Label Content="ID: "
                           FontSize="18" />
                    <TextBlock x:Name="IdTextBlock_Canvas10"
                               VerticalAlignment="Center"
                               Text="{Binding CanvasIDCollection[10]}"
                               FontSize="18"
                               Width="50" />
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            Margin="0,-10,0,0"
                            HorizontalAlignment="Center">
                    <Label Content="Value: "
                           FontSize="18" />
                    <TextBlock x:Name="ValueTextBlock_Canvas10"
                               VerticalAlignment="Center"
                               Text="{Binding CanvasValueCollection[10]}"
                               FontSize="18"
                               Width="50" />
                </StackPanel>
            </StackPanel>

            <Border Grid.Row="2"
                    Grid.Column="3"
                    BorderBrush="{Binding BorderBrushCollection[11]}"
                    BorderThickness="1"
                    Width="150"
                    Height="150"
                    Margin="0 0 0 10">
                <ContentControl Width="150"
                                Content="{Binding Path=CanvasCollection[11]}">
                    <i:Interaction.Triggers>

                        <i:EventTrigger EventName="Drop">
                            <i:InvokeCommandAction Command="{Binding DropEntityOnCanvas}"
                                                   CommandParameter="11" />
                        </i:EventTrigger>

                        <i:EventTrigger EventName="MouseLeftButtonDown">
                            <i:InvokeCommandAction Command="{Binding LeftMouseButtonDownOnCanvas}"
                                                   CommandParameter="11" />
                        </i:EventTrigger>

                        <i:EventTrigger EventName="MouseLeftButtonUp">
                            <i:InvokeCommandAction Command="{Binding MouseLeftButtonUp}" />
                        </i:EventTrigger>

                        <i:EventTrigger EventName="MouseRightButtonUp">
                            <i:InvokeCommandAction Command="{Binding RightMouseButtonUpOnCanvas}"
                                                   CommandParameter="11" />
                        </i:EventTrigger>

                    </i:Interaction.Triggers>
                </ContentControl>
            </Border>
            <Button Grid.Row="2"
                    Grid.Column="3"
                    Content="X"
                    Height="20"
                    Width="20"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="0,0,40,30"
                    Command="{Binding FreeUpCanvas}"
                    CommandParameter="11" />

            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        Grid.Row="2"
                        Grid.Column="3"
                        Width="150">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <Label Content="ID: "
                           FontSize="18" />
                    <TextBlock x:Name="IdTextBlock_Canvas11"
                               VerticalAlignment="Center"
                               Text="{Binding CanvasIDCollection[11]}"
                               FontSize="18"
                               Width="50" />
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            Margin="0,-10,0,0"
                            HorizontalAlignment="Center">
                    <Label Content="Value: "
                           FontSize="18" />
                    <TextBlock x:Name="ValueTextBlock_Canvas11"
                               VerticalAlignment="Center"
                               Text="{Binding CanvasValueCollection[11]}"
                               FontSize="18"
                               Width="50" />
                </StackPanel>
            </StackPanel>

        </Grid>
    </Grid>
</UserControl>
